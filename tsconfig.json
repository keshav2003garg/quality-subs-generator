{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES2021",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "declaration": true,
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/**/*", "docker/**/*", "index.ts"],
    "exclude": ["node_modules", "dist", "example", "docker/app/src"]
}
